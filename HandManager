import com.leapmotion.leap.*;

public class HandManager {

	int currentHandID;
	int newHandID;
	Frame frame;
	InteractionBox box;
	HandList hands;
	Hand hand;
	Finger frontFinger;
	boolean soundPlaying;
	AudioPlayer player;
	
	public HandManager(AudioPlayer audioPlayer) {
		player = audioPlayer;
		soundPlaying=false;
	}
	
	public void check(Frame frame) {
		hands = frame.hands();
		box = frame.interactionBox();
		hand = hands.frontmost();
		newHandID = hand.id();
		frontFinger = frame.fingers().frontmost();
		
		checkHands();
		
	}
	
	private void checkHands() {
		Vector pos = frontFinger.stabilizedTipPosition();
		float posX = pos.getX();
		float posY = pos.getY();
		float posZ = pos.getZ();
		
		if(soundPlaying == false) {
			if(hands.isEmpty() == false) {
				player.startSound(posX,posZ);
			}
		}
		
		
	}

}
